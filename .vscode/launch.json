    "version": "0.3.0",
    "configurations": [
    {
      "name": "Debug c2math",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/c2math",
      "args": ["--dump-json", "${workspaceFolder}/tests/fr_tests/03_assign.c", "--", "-x", "c", "-std=c11"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
    ]
}